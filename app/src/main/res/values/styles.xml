<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="TextBodyStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextBodyStyle.Profile" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/black_50</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextDataStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextCardStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <!--    Recycler style-->
    <style name="RecyclerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_16dp</item>
        <item name="spanCount">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RecyclerStyleNotification">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="spanCount">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
    </style>

    <style name="TextItemStudentStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>


    <!-- button style-->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/radius_16</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:backgroundTint">@color/black_100</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="Button.ViewPermission" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:backgroundTint">@color/black_70</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="TextDialogStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="ButtonDialog.add" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="cornerRadius">@dimen/radius_16</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">@dimen/text_size_14</item>

    </style>

    <style name="ButtonDialog.remove" parent="ButtonDialog.add">m>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <!-- input_text_field -->
    <style name="input_text_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColorHint">@color/black_50</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextItemPostWithoutImage" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>